<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".NoseRatingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noseGenuinessTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nose.genuiness" />

        <RatingBar
            android:id="@+id/noseGenuinessRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1"
            tools:layout_editor_absoluteY="193dp" />

        <TextView
            android:id="@+id/nosePositiveIntensityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/nose.positiveIntensity" />

        <RatingBar
            android:id="@+id/nosePositiveIntensityRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1" />

        <TextView
            android:id="@+id/noseQualityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/nose.quality" />

        <RatingBar
            android:id="@+id/noseQualityRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1" />
    </LinearLayout>
</ScrollView>
